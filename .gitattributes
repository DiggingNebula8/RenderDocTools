# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Shell scripts
*.sh text eol=lf
*.ps1 text eol=crlf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# JSON files
*.json text eol=lf

# Config files
*.config text eol=lf
*.ini text eol=lf
*.toml text eol=lf

# Binary files
*.rdc binary
*.pyd binary
*.dll binary
*.so binary
*.dylib binary
*.exe binary
*.zip binary

